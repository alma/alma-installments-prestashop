{
    "name": "alma/alma-instalments-prestashop",
    "description": "Payment method module to integrate Alma in PrestaShop",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^5",
        "mockery/mockery": "^1.3"
    },
    "require": {
        "php": "^5.6 || ~7.0 || ~7.1 || ~7.2 || ~7.3 || ~7.4 || ~8.0 || ~8.1",
        "alma/alma-php-client": "^1.10.0"
    },
    "autoload": {
        "psr-4": {
            "Alma\\PrestaShop\\": ["lib/", "."],
            "Alma\\PrestaShop\\Controllers\\Hook\\": "controllers/hook/",
            "Alma\\PrestaShop\\Tests\\": "tests/",
            "Alma\\PrestaShop\\Exceptions\\": "exceptions/"
        },
        "files": [
            "lib/Utils/functions.php"
        ]
    },
    "config": {
        "prepend-autoloader": false,
        "optimize-autoloader": true
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Olivier Lance",
            "email": "olivier.lance@getalma.eu"
        }
    ],
    "minimum-stability": "dev"
}
