{
    "name": "alma/alma-instalments-prestashop",
    "description": "Payment method module to integrate Alma in PrestaShop",
    "type": "library",
    "require": {
        "alma/alma-php-client": "^1.3.1"
    },
    "autoload": {
        "psr-4": {
            "Alma\\PrestaShop\\": ["lib/", "."],
            "Alma\\PrestaShop\\Controllers\\Hook\\": "controllers/hook/"
        },
        "files": [
            "lib/Utils/functions.php"
        ]
    },
    "config": {
        "prepend-autoloader": false,
        "optimize-autoloader": true
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Olivier Lance",
            "email": "olivier.lance@getalma.eu"
        }
    ],
    "minimum-stability": "dev",
    "require-dev": {
        "pestphp/pest": "1.x-dev",
        "mockery/mockery": "1.4.x-dev"
    }
}
